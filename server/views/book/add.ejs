<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<!--Content for the Add page-->
<div class = "container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Add Contact</h1>
            <form class="form" method="POST">
                <div class="form group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form control"
                    id="nameTextField"
                    placeholder = "Enter the Contact Name"
                    name ="name" required>
                    </div>

                    <div class="form group">
                    <label for="authorTextField">Number</label>
                    <input type="text" class="form control"
                    id="authorTextField"
                    placeholder = "Enter the Contact Number"
                    name ="author" required>
                    </div>

                    <div class="form group">
                    <label for="publishedTextField">Email</label>
                    <input type="text" class="form control"
                    id="publishedTextField"
                    placeholder = "Enter the Email Address"
                    name ="published" required>
                    </div>


                    <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>submit</button>
                    <a href="/bookList" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>
                </form>
            </div>
        </div>
    </div>




